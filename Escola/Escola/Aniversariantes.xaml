        mc:Ignorable="d"
        Title="Aniversariantes" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="22,39,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Janeiro"/>
            <ComboBoxItem Content="Fevereiro"/>
            <ComboBoxItem Content="Março"/>
            <ComboBoxItem Content="Abril"/>
            <ComboBoxItem Content="Maio"/>
            <ComboBoxItem Content="Junho"/>
            <ComboBoxItem Content="Julho"/>
            <ComboBoxItem Content="Agosto"/>
            <ComboBoxItem Content="Setembro"/>
            <ComboBoxItem Content="Outubro"/>
            <ComboBoxItem Content="Novembro"/>
            <ComboBoxItem Content="Dezembro"/>
        </ComboBox>
        <Button x:Name="btnExibir" Content="Exibir" HorizontalAlignment="Left" Margin="165,39,0,0" VerticalAlignment="Top" Width="75" Click="btnExibir_Click"/>
        <ListBox x:Name="lb" HorizontalAlignment="Left" Height="222" Margin="10,89,0,0" VerticalAlignment="Top" Width="498"/>
    </Grid>
</Window>
